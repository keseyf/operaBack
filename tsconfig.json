{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],

    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
